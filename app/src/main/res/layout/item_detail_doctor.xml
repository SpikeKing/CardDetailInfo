<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:ignore="HardcodedText,RtlHardcoded">

    <View
        android:id="@+id/detail_hospital_v_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/divider_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:paddingLeft="@dimen/main_horizontal_margin"
        android:paddingRight="@dimen/main_horizontal_margin">

        <ImageView
            android:id="@+id/detail_doctor_iv_portrait"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@color/text_hint"/>

        <TextView
            android:id="@+id/detail_doctor_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/main_horizontal_margin"
            android:layout_marginTop="28dp"
            android:layout_toRightOf="@+id/detail_doctor_iv_portrait"
            android:textColor="@color/text_title"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="王坚韧"/>

        <TextView
            android:id="@+id/detail_doctor_tv_clinic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/detail_doctor_tv_name"
            android:layout_marginLeft="@dimen/main_horizontal_margin"
            android:layout_toRightOf="@+id/detail_doctor_tv_name"
            android:textColor="@color/text_content_2"
            android:textSize="14sp"
            tools:text="皮肤科"/>

        <TextView
            android:id="@+id/detail_doctor_tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/detail_doctor_tv_clinic"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/detail_doctor_tv_clinic"
            android:textColor="@color/text_content_2"
            android:textSize="14sp"
            tools:text="副主任医师"/>

        <TextView
            android:id="@+id/detail_doctor_tv_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/detail_doctor_tv_name"
            android:layout_below="@+id/detail_doctor_tv_name"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_content_2"
            android:textSize="14sp"
            tools:text="中国人民解放军总医院(301医院)"/>

    </RelativeLayout>

</LinearLayout>